{
  "realm": "logistica",
  "enabled": true,
  "sslRequired": "none",

  "loginWithEmailAllowed": true,
  "registrationAllowed": false,
  "duplicateEmailsAllowed": false,
  "bruteForceProtected": false,

  "clients": [
    {
      "clientId": "api-gateway",
      "name": "API Gateway Client",
      "enabled": true,
      "protocol": "openid-connect",

      "publicClient": false,
      "secret": "gateway-secret",
      "clientAuthenticatorType": "client-secret",

      "redirectUris": ["https://oauth.pstmn.io/*", "https://localhost:8443/*"],
      "webOrigins": ["https://oauth.pstmn.io", "https://localhost:8443"],

      "standardFlowEnabled": true, 
      "directAccessGrantsEnabled": true, 
      "serviceAccountsEnabled": true, 
      "implicitFlowEnabled": false,
      "fullScopeAllowed": true,

      "defaultClientScopes": ["profile", "email", "roles", "web-origins"],
      "optionalClientScopes": ["offline_access", "microprofile-jwt"]
    }
  ],

  "roles": {
    "realm": [
      {
        "name": "cliente",
        "description": "Cliente registrado - gestiona sus contenedores y solicitudes"
      },
      {
        "name": "operador",
        "description": "Personal operativo - gestiona rutas, tramos, camiones, depósitos"
      },
      {
        "name": "transportista",
        "description": "Conductor - inicia/finaliza tramos"
      },
      {
        "name": "admin",
        "description": "Administrador - acceso total y eliminaciones físicas"
      }
    ]
  },

  "users": [
    {
      "username": "cliente1",
      "enabled": true,
      "emailVerified": true,
      "email": "cliente1@logistica.com",
      "firstName": "Cliente",
      "lastName": "Test",
      "credentials": [
        {
          "type": "password",
          "value": "cliente123",
          "temporary": false
        }
      ],
      "realmRoles": ["cliente"]
    },
    {
      "username": "operador1",
      "enabled": true,
      "emailVerified": true,
      "email": "operador1@logistica.com",
      "firstName": "Operador",
      "lastName": "Test",
      "credentials": [
        {
          "type": "password",
          "value": "operador123",
          "temporary": false
        }
      ],
      "realmRoles": ["operador"]
    },
    {
      "username": "transportista1",
      "enabled": true,
      "emailVerified": true,
      "email": "transportista1@logistica.com",
      "firstName": "Transportista",
      "lastName": "Test",
      "credentials": [
        {
          "type": "password",
          "value": "transportista123",
          "temporary": false
        }
      ],
      "realmRoles": ["transportista"]
    },
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "email": "admin@logistica.com",
      "firstName": "Admin",
      "lastName": "Test",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"]
    }
  ]
}
